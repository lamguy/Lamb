<div class="row">

  <!-- left column -->
  <div class="col col-md-7">

  	<!-- begin task header -->
	<div class="row">
	  <div class="col">
		<h2><%= @task.name %></h2>
	  </div>
	</div>

	<div class="row">
	  <div class="col col-md-10">
		<strong>Due: </strong> <%= @task.due %> <br>
		<strong>Assignee: </strong> <%= link_to @task.assignee.name, user_path(@task.assignee) %>
	  </div>
	  <div class="col col-md-2">
	  	<span class="badge priority-<%= @task.priority_label.downcase %> d-block"><%= @task.priority_label %></span>
	  </div>
	</div>
	<!-- end task header -->

	<div class="row">
		<div class="col">
		  	<div id="task-description">
				<%= markdown(@task.description) %>
		  	</div>
		</div>
	</div>

  </div>
  <!-- end: left col -->

  <div class="col col-md-5">
  	<div id="task-comments">
	    <% @comments.each do |comment| %>
	    <div class="media comment">
		  <div class="media-body comment-body">
		    <h6 class="mt-0 mb-1"><%= comment.user.name %></h6>
			<%= markdown(comment.comment) %>
		  </div>
		</div>
	    <% end %>
	    <div class="media comment">
		  <div class="media-body comment-body">
			<%= form_for([@task, @task.task_comments.build], remote: true) do |f| %>

		      <div class="form-group">
			    <%= f.label :comment, "Enter your comment" %>
			    <%= f.text_area(:comment, :class => "form-control") %>
			  </div>

			  <div class="actions">
			    <%= f.submit "SUBMIT" %>
			  </div>
			<% end %>
		  </div>
		</div>
  	</div>
  </div>
</div>
