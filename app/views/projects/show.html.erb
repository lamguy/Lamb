<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col">
    <%= link_to '&laquo;'.html_safe + ' Go Back', projects_path %> <%= link_to 'Edit', edit_project_path(@project), :class => "btn btn-sm btn-primary" %> 
  </div>
</div>

<p>
  <h5>Project: <span><%= @project.name %></span></h5>
</p>

<p>
  <strong>Status:</strong>
  <%= @project.status %>
</p>


<div class="row">
  <div class="col">
<table class="table table-sm table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Assigner</th>
      <th>Assignee</th>
      <th>Due</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.assigner.name %></td>
        <td><%= task.assignee.name %></td>
        <td><%= task.due %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>
