<%= form_for(milestone) do |f| %>
  <% if milestone.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(milestone.errors.count, "error") %> prohibited this milestone from being saved:</h2>

      <ul>
      <% milestone.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :project_id %>
    <%= f.select :project_id, Project.all.collect {|p| [ p.name, p.id ] }, {}, {:class => "form-control"} %>
  </div>

  <div class="field form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class => "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :description %>
    <%= f.text_field :description, :class => "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :due %>
    <%= f.date_select :due, :class => "form-control" %>
  </div>

  <div class="actions form-group">
    <%= f.submit :class => "btn btn-primary" %>
  </div>
<% end %>
